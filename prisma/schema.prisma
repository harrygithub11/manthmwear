generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model account {
  id                String  @id
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              user    @relation(fields: [userId], references: [id], onDelete: Cascade, map: "Account_userId_fkey")

  @@unique([provider, providerAccountId], map: "Account_provider_providerAccountId_key")
  @@index([userId], map: "Account_userId_fkey")
}

model address {
  id         String  @id
  userId     String
  name       String
  phone      String
  line1      String
  line2      String?
  city       String
  state      String
  postalCode String
  country    String  @default("India")
  isDefault  Boolean @default(false)
  user       user    @relation(fields: [userId], references: [id], onDelete: Cascade, map: "Address_userId_fkey")
  order      order[]

  @@index([userId], map: "Address_userId_fkey")
}

model cartitem {
  id        String   @id
  userId    String
  productId String
  variantId String?
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime
  product   product  @relation(fields: [productId], references: [id], onDelete: Cascade, map: "CartItem_productId_fkey")
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade, map: "CartItem_userId_fkey")

  @@unique([userId, productId, variantId], map: "CartItem_userId_productId_variantId_key")
  @@index([productId], map: "CartItem_productId_fkey")
}

model order {
  id              String              @id
  userId          String
  orderNumber     String              @unique(map: "Order_orderNumber_key")
  status          order_status        @default(PENDING)
  paymentStatus   order_paymentStatus @default(PENDING)
  paymentMethod   String?
  paymentId       String?
  subtotal        Int
  shipping        Int                 @default(0)
  tax             Int                 @default(0)
  discount        Int                 @default(0)
  couponCode      String?
  total           Int
  currency        String              @default("INR")
  addressId       String?
  shippingAddress String?             @db.LongText
  notes           String?             @db.Text
  createdAt       DateTime            @default(now())
  updatedAt       DateTime
  address         address?            @relation(fields: [addressId], references: [id], map: "Order_addressId_fkey")
  user            user                @relation(fields: [userId], references: [id], map: "Order_userId_fkey")
  orderitem       orderitem[]
  shipment        shipment?
  couponusage     couponusage[]

  @@index([addressId], map: "Order_addressId_fkey")
  @@index([userId], map: "Order_userId_fkey")
}

model orderitem {
  id             String         @id
  orderId        String
  variantId      String
  quantity       Int
  price          Int
  subtotal       Int
  order          order          @relation(fields: [orderId], references: [id], onDelete: Cascade, map: "OrderItem_orderId_fkey")
  productvariant productvariant @relation(fields: [variantId], references: [id], map: "OrderItem_variantId_fkey")

  @@index([orderId], map: "OrderItem_orderId_fkey")
  @@index([variantId], map: "OrderItem_variantId_fkey")
}

model product {
  id             String           @id
  slug           String           @unique(map: "Product_slug_key")
  name           String
  tagline        String?
  description    String           @db.Text
  category       String
  images         String           @db.LongText
  isActive       Boolean          @default(true)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime
  cartitem       cartitem[]
  productfeature productfeature[]
  productvariant productvariant[]
}

model productfeature {
  id          String  @id
  productId   String
  name        String
  description String
  product     product @relation(fields: [productId], references: [id], onDelete: Cascade, map: "ProductFeature_productId_fkey")

  @@index([productId], map: "ProductFeature_productId_fkey")
}

model productvariant {
  id        String      @id
  productId      String
  sku            String      @unique(map: "ProductVariant_sku_key")
  size           String
  sizeRank       Int?        @default(99)
  color          String
  colorCode      String?     @default("#CCCCCC")
  colorRank      Int?        @default(99)
  pack           Int
  price          Int
  stock          Int         @default(0)
  baseStock      Int?
  useSharedStock Boolean     @default(false)
  isActive       Boolean     @default(true)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime
  orderitem orderitem[]
  product   product     @relation(fields: [productId], references: [id], onDelete: Cascade, map: "ProductVariant_productId_fkey")

  @@index([productId], map: "ProductVariant_productId_fkey")
}

model shipment {
  id               String   @id @default(cuid())
  orderId          String   @unique
  rapidShypOrderId String?
  shipmentId       String?
  awb              String?
  courierCode      String?
  courierName      String?
  labelUrl         String?
  manifestUrl      String?
  status           String   @default("PENDING")
  trackingHistory  String?  @db.LongText
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  order            order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model session {
  id           String   @id
  sessionToken String   @unique(map: "Session_sessionToken_key")
  userId       String
  expires      DateTime
  user         user     @relation(fields: [userId], references: [id], onDelete: Cascade, map: "Session_userId_fkey")

  @@index([userId], map: "Session_userId_fkey")
}

model user {
  id                String     @id
  name              String?
  email             String     @unique(map: "User_email_key")
  emailVerified     DateTime?
  image             String?
  password          String?
  phone             String?
  resetToken        String?    @unique
  resetTokenExpiry  DateTime?
  createdAt         DateTime   @default(now())
  updatedAt         DateTime
  account           account[]
  address           address[]
  cartitem          cartitem[]
  order             order[]
  session           session[]
  couponusage       couponusage[]
}

model verificationtoken {
  identifier String
  token      String   @unique(map: "VerificationToken_token_key")
  expires    DateTime

  @@unique([identifier, token], map: "VerificationToken_identifier_token_key")
}

enum order_status {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

enum order_paymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

model sitesettings {
  id                    String   @id @default(cuid())
  // Branding
  siteName              String   @default("MANTHM")
  siteTagline           String?  @default("Premium Men's Underwear")
  logoUrl               String?
  faviconUrl            String?
  
  // Contact & Domain
  domain                String?  @default("manthmwear.com")
  contactEmail          String?  @default("contact@manthmwear.com")
  contactPhone          String?
  
  // Store Settings
  currency              String   @default("INR")
  currencySymbol        String   @default("â‚¹")
  shippingFee           Int      @default(5000) // in paise
  freeShippingThreshold Int      @default(99900) // in paise
  taxRate               Float    @default(0)
  prepaidDiscount       Int      @default(0) // in paise
  
  // Email Settings
  emailFrom             String?
  adminNotificationEmail String?
  
  // Social Media
  instagramUrl          String?
  facebookUrl           String?
  twitterUrl            String?
  
  // SEO
  metaTitle             String?
  metaDescription       String?
  metaKeywords          String?
  
  // Payment Gateway
  razorpayKeyId         String?
  razorpayKeySecret     String?
  
  // Payment Methods
  codEnabled            Boolean  @default(true)
  onlinePaymentEnabled  Boolean  @default(true)
  
  // Admin Security
  adminPasswordHash     String?  @default("$2b$10$N9qo8uLOickgx2ZMRZoMyeIjZAgcfl7p92ldGxad68LJZdL17lhWy") // Default: "admin123"
  
  // Maintenance
  maintenanceMode       Boolean  @default(false)
  maintenanceMessage    String?
  
  // Timestamps
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@map("sitesettings")
}

model supportticket {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String
  message   String   @db.Text
  status    String   @default("NEW") // NEW, IN_PROGRESS, RESOLVED, CLOSED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("supporttickets")
}

model newslettersubscriber {
  id           String   @id @default(cuid())
  email        String   @unique
  subscribedAt DateTime @default(now())
  isActive     Boolean  @default(true)
  
  @@map("newslettersubscribers")
}

model coupon {
  id              String        @id @default(cuid())
  code            String        @unique
  description     String?       @db.Text
  discountType    String        // PERCENTAGE or FIXED
  discountValue   Int           // Percentage (0-100) or Fixed amount in paise
  minOrderValue   Int           @default(0) // Minimum order value in paise
  maxDiscount     Int?          // Maximum discount cap in paise (for percentage type)
  usageLimit      Int?          // Total usage limit (null = unlimited)
  usageCount      Int           @default(0) // Current usage count
  oneTimePerUser  Boolean       @default(false) // Can be used only once per user
  expiryDate      DateTime?     // Null = no expiry
  isActive        Boolean       @default(true)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  couponusage     couponusage[]
  
  @@map("coupons")
}

model couponusage {
  id        String   @id @default(cuid())
  couponId  String
  orderId   String
  userId    String
  discount  Int      // Actual discount applied in paise
  usedAt    DateTime @default(now())
  coupon    coupon   @relation(fields: [couponId], references: [id], onDelete: Cascade)
  order     order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([couponId])
  @@index([orderId])
  @@index([userId])
  @@map("couponusages")
}
